<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home"), static_pages_home_path %></li>
        <li><%= link_to t(".help"), static_pages_help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t(".users"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", class:"dropdown-toggle", data: {bs_toggle: "dropdown"} do %>
              <%= t(".account") %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to t(".logout"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".login"), login_path %></li>
        <% end %>
        <li><%= link_to t(".contact"), static_pages_contact_path %></li>
        <li><%= link_to t(".switch.en"), url_for(locale: :en) %></li>
        <li><%= link_to t(".switch.vi"), url_for(locale: :vi) %></li>
      </ul>
    </nav>
  </div>
</header>
