<% provide(:title, t(".title")) %>
<h1><%= t(".heading") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t(".change"), Settings.defaults.user.gravatar_link, target: "_blank" %>
    </div>
  </div>
</div>
