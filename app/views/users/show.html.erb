<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <div>
        <%= @user.created_at.strftime(Settings.defaults.date_formats.user_profile) %>
      </div>
      <div>
        <%= @user.updated_at.strftime(Settings.defaults.date_formats.user_profile) %>
      </div>
    </section>
  </aside>
</div>
